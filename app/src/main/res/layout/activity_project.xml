<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/mainAppbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/mainCollapsing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:contentScrim="?attr/colorPrimary"
            app:collapsedTitleTextAppearance="@style/ProjectTitle.Collapsed"
            app:expandedTitleTextAppearance="@style/ProjectTitle.Expanded"
            app:title="BugTracktor"
            app:expandedTitleMarginBottom="70dp"
            android:fitsSystemWindows="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="72dp"
                android:layout_marginLeft="72dp"
                android:layout_marginRight="48dp"
                android:orientation="vertical"
                >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tiProjectName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Project name"
                    >
                    <EditText
                        android:id="@+id/etProjectName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="DNO Project"
                        />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tiProjectShortDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Short description"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="32dp"
                    >
                    <EditText
                        android:id="@+id/etProjectShortDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Project for doing everything"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <com.github.sonerik.bugtracktor.ui.views.TintableMenuToolbar
                android:id="@+id/mainToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:menuItemTint="#fff"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin"
                />
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <com.github.sonerik.bugtracktor.ui.views.DummyNestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:clipToPadding="false"
        android:focusableInTouchMode="false"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:behavior_overlapTop="32dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_marginLeft="16dp"
                        app:srcCompat="@drawable/account"
                        />
                    <TextView
                        android:id="@+id/labelAuthor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:lineSpacingExtra="8dp"
                        android:text="Creator"
                        android:layout_marginLeft="62dp"
                        android:layout_marginTop="16dp"
                        />
                    <TextView
                        android:id="@+id/txtAuthor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#333"
                        android:text="Vasya Pupkin"
                        android:layout_marginLeft="62dp"
                        android:layout_below="@+id/labelAuthor"
                        android:gravity="center_vertical"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:id="@+id/icMembers"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:layout_marginLeft="16dp"
                        app:srcCompat="@drawable/ic_group_black_24dp"
                        />
                    <TextView
                        android:id="@+id/labelMembers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Project members"
                        android:layout_marginLeft="62dp"
                        android:layout_marginTop="16dp"
                        />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvMembers"
                        android:layout_below="@+id/icMembers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:clipToPadding="false"
                        tools:listitem="@layout/item_project_members"
                        app:layoutManager="@string/layout_manager_linear"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </com.github.sonerik.bugtracktor.ui.views.DummyNestedScrollView>

</android.support.design.widget.CoordinatorLayout>