<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_grey_200"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/mainAppbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/mainCollapsing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:contentScrim="?attr/colorPrimary"
            app:collapsedTitleTextAppearance="@style/ProjectTitle.Collapsed"
            app:expandedTitleTextAppearance="@style/ProjectTitle.Expanded"
            app:title="BugTracktor"
            android:fitsSystemWindows="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="72dp"
                android:layout_marginLeft="72dp"
                android:layout_marginRight="48dp"
                android:layout_marginBottom="?attr/actionBarSize"
                android:orientation="vertical"
                >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tiProjectName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Project name"
                    >
                    <EditText
                        android:id="@+id/etProjectName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="DNO Project"
                        />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tiProjectShortDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Short description"
                    android:layout_marginTop="16dp"
                    >
                    <EditText
                        android:id="@+id/etProjectShortDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Project for doing everything"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <com.github.sonerik.bugtracktor.ui.views.TintableMenuToolbar
                android:id="@+id/mainToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:menuItemTint="#fff"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin"
                />
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <com.github.sonerik.bugtracktor.ui.views.DummyNestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:clipToPadding="false"
        android:focusableInTouchMode="false"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:behavior_overlapTop="48dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_marginLeft="16dp"
                        app:srcCompat="@drawable/account"
                        />
                    <TextView
                        android:id="@+id/labelAuthor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:lineSpacingExtra="8dp"
                        android:text="Creator"
                        android:layout_marginLeft="62dp"
                        android:layout_marginTop="16dp"
                        />
                    <TextView
                        android:id="@+id/txtAuthor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#333"
                        tools:text="Vasya Pupkin"
                        android:layout_marginLeft="62dp"
                        android:layout_below="@+id/labelAuthor"
                        android:gravity="center_vertical"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                tools:visibility="visible"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    >
                    <ImageView
                        android:id="@+id/icMembers"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:layout_marginLeft="16dp"
                        app:srcCompat="@drawable/ic_group_black_24dp"
                        />
                    <ImageView
                        android:id="@+id/icAddMember"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginLeft="16dp"
                        android:layout_alignParentRight="true"
                        android:scaleType="center"
                        android:foreground="?selectableItemBackgroundBorderless"
                        android:visibility="gone"
                        app:srcCompat="@drawable/plus"
                        tools:visibility="visible"
                        />
                    <TextView
                        android:id="@+id/labelMembers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Project members"
                        android:layout_marginLeft="62dp"
                        android:layout_marginTop="16dp"
                        />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvMembers"
                        android:layout_below="@+id/icMembers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:layout_height="260dp"
                        android:paddingBottom="8dp"
                        android:clipToPadding="false"
                        tools:listitem="@layout/item_project_members"
                        app:layoutManager="@string/layout_manager_linear"
                        tools:visibility="visible"
                        />

                    <LinearLayout
                        android:id="@+id/layoutMembersEmpty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/icMembers"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="gone"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            app:srcCompat="@drawable/information_outline"
                            android:layout_gravity="center"
                            android:tint="@color/md_grey_600"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:gravity="center"
                            android:text="This project doesn't have members yet."
                            />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnViewAllMembers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rvMembers"
                        android:background="#0fff"
                        android:foreground="?selectableItemBackground"
                        android:text="All Members"
                        android:visibility="gone"
                        tools:visibility="visible"
                        />

                    <TextView
                        android:id="@+id/membersLoadingView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icMembers"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="Loading..."
                        />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                tools:visibility="gone"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:id="@+id/icIssues"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:layout_marginLeft="16dp"
                        app:srcCompat="@drawable/bug"
                        />
                    <TextView
                        android:id="@+id/labelIssues"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Recent Issues"
                        android:layout_marginLeft="62dp"
                        android:layout_marginTop="18dp"
                        />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvIssues"
                        android:layout_below="@+id/icIssues"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:layout_height="260dp"
                        android:paddingBottom="8dp"
                        android:clipToPadding="false"
                        tools:listitem="@layout/item_issues"
                        app:layoutManager="@string/layout_manager_linear"
                        tools:visibility="visible"
                        />

                    <LinearLayout
                        android:id="@+id/layoutIssuesEmpty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/icIssues"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="gone"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            app:srcCompat="@drawable/thumb_up"
                            android:layout_gravity="center"
                            android:tint="@color/md_grey_600"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:gravity="center"
                            android:text="No issues! You're awesome!"
                            />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnViewAllIssues"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rvIssues"
                        android:background="#0fff"
                        android:foreground="?selectableItemBackground"
                        android:text="All Issues"
                        android:visibility="gone"
                        tools:visibility="visible"
                        />

                    <TextView
                        android:id="@+id/issuesLoadingView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icIssues"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="Loading..."
                        />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </com.github.sonerik.bugtracktor.ui.views.DummyNestedScrollView>

    <ProgressBar
        android:id="@+id/progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_marginTop="-7dp"
        android:visibility="gone"
        />
    
</android.support.design.widget.CoordinatorLayout>