<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/gradient_bottom_white"
            android:layout_gravity="bottom"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/gradient_bottom_shadow"
            android:layout_gravity="bottom"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/gradient_top_shadow"
            />
        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_gravity="bottom"
            app:ci_margin="8dp"
            app:ci_drawable="@drawable/page_selected"
            app:ci_drawable_unselected="@drawable/page_unselected"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0"
        >
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0fff"
            android:layout_below="@+id/pager"
            android:layout_alignParentLeft="true"
            android:text="Cancel"
            android:foreground="?selectableItemBackground"
            android:layout_weight="1"
            />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0fff"
            android:layout_below="@+id/pager"
            android:layout_alignParentRight="true"
            android:text="Add"
            android:foreground="?selectableItemBackground"
            android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>